<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    tools:context = ".ScoreActivity"

    android:layout_width = "match_parent"
    android:layout_height = "match_parent"

    android:background = "@drawable/background_landscape_score">


    <LinearLayout
        android:id = "@+id/scoreVerticalLayout"
        android:layout_width = "match_parent"
        android:layout_height = "300dp"

        android:orientation = "vertical"
        android:background = "@drawable/score_background"

        app:layout_constraintTop_toTopOf = "parent"
        android:layout_marginTop = "60dp"
        app:layout_constraintStart_toStartOf = "parent"
        android:layout_marginStart = "200dp"
        app:layout_constraintEnd_toEndOf = "parent"
        android:layout_marginEnd = "200dp">


        <TextView
            android:id = "@+id/scoreTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text = "@string/sampleTime"
            android:textColor = "@color/black"
            android:textStyle = "bold"
            android:textSize = "24sp"
            android:textAlignment = "center"

            android:layout_marginTop = "20dp"
            android:paddingTop = "5dp"
            android:paddingBottom = "5dp"
            android:paddingStart = "10dp"
            android:paddingEnd = "10dp"/>


        <TextView
            android:id = "@+id/scoreDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text = "@string/sampleDifficulty"
            android:textColor = "@color/black"
            android:textStyle = "bold"
            android:textSize = "24sp"
            android:textAlignment = "center"

            android:paddingTop = "5dp"
            android:paddingBottom = "5dp"
            android:paddingStart = "10dp"
            android:paddingEnd = "10dp"/>


        <TextView
            android:id = "@+id/finalScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text = "@string/sampleScore"
            android:textColor = "@color/black"
            android:textStyle = "bold"
            android:textSize = "24sp"
            android:textAlignment = "center"

            android:paddingTop = "5dp"
            android:paddingBottom = "5dp"
            android:paddingStart = "10dp"
            android:paddingEnd = "10dp"/>


        <LinearLayout
            android:id = "@+id/scoreHorizontalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation = "horizontal">


            <Button
                android:id = "@+id/returnToMenuButton"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"

                style = "@style/Widget.MaterialComponents.Button.TextButton"
                android:text = "@string/returnToMenuButton"
                android:textColor = "@color/black"
                android:textStyle = "bold"
                android:textSize = "17sp"

                android:backgroundTint = "@color/gray"

                android:layout_marginTop = "70dp"
                android:layout_marginStart = "30dp"/>


            <Button
                android:id = "@+id/replayButton"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"

                style = "@style/Widget.MaterialComponents.Button.TextButton"
                android:text = "@string/replayButton"
                android:textStyle = "bold"
                android:textSize = "17sp"
                android:backgroundTint = "@color/readable"

                android:layout_marginTop = "70dp"
                android:layout_marginStart = "50dp"/>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>